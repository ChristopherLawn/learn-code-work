{{!-- each comment will display user's username above the comment --}}
<div class="comments mdl-color-text--grey-700">
  {{#each this}}
  <header class="comment__header">
    <div class="comment__author">
      <strong>{{user.username}}</strong>
    </div>
  </header>
  <div class="comment__text">
    {{comment_text}}
  </div>
  {{/each}}
</div>