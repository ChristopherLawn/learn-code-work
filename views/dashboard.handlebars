<form class="add-language-form">

    <h2 class="mdl-typography--font-light mdl-typography--display-1-color-contrast">Add A Language Module</h2>
    <div class="mdl-typography--font-light mdl-typography--display-1-color-contrast">
        {{!-- form questions --}}
      <div>
        <label for="name">Name Of Language: </label>
        <input type="text" id="name" placeholder="JavaScript"required/>
      </div>
      <div>
        <label for="description">Description: </label>
        <input type="text" id="description" placeholder="JavaScript is a ..."></input>
      </div>
      <div>
        <label for="organizations">Major Organizations: </label>
        <input type="text" id="organizations" placeholder="Wordpress, SoundCloud " multiple/>
      </div>
      <div>
        <label for="developer">Developed By: </label>
        <input type="text" id="developer" placeholder="Brendan Eich"/>
      </div>
      <div>
        <label for="year-reated">Year Created: </label>
        <input type="number" id="year-created" placeholder="1995"/>
      </div>
      <div>
        <label for="version">Version: </label>
        <input type="text" id="version" placeholder="ECMAScript 2021"/>
      </div>
      <div>
        <label for="ext">File Name Extension: </label>
        <input type="text" id="ext" placeholder=".js"/>
      </div>
      <div>
        <label for="license-owner">Licensed Under: </label>
        <input type="text" id="license-owner" placeholder="GPL"/>
      </div>
      <div>
        <label for="website">Website: </label>
        <input type="text" id="website" placeholder="javascript.com"/>
      </div>
      <div>
        <label for="language-type">Language Type: </label>
        <input type="text" id="language-type" placeholder="Programming"/>
      </div>
      {{!-- button --}}
      <div>
        <button type="submit">submit</button>
      </div>
    </div>
</form>

